{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "aws_region": "us-east-1",
    "aws_base_ami": "ami-d6557ac0",
    "ami_groups": "all"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `aws_base_ami`}}",
    "instance_type": "t2.micro",
    "ami_name": "Heptio K8s ITHAKA AMI (Ubuntu 16.04 LTS {{isotime \"2006-01-02 15.04.05\"}})",
    "ami_groups": "{{user `ami_groups`}}",
    "communicator": "ssh",
    "ssh_username": "ubuntu",
    "subnet_id": "{{user `subnet_id`}}",
    "vpc_id": "{{user `vpc_id`}}",
    "ssh_file_transfer_method": "sftp",
    "ssh_pty": true
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./payload",
      "destination": "/home/ubuntu"
    },
    {
      "type": "shell",
      "inline": [
        "sudo /bin/bash -eux /home/ubuntu/payload/prepare-ami.sh",
        "rm -rf /home/ubuntu/payload"
      ]
    }
  ]
}
